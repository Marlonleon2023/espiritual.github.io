---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		
		<main>
		<slot />
		</main>
	</body>
</html>
<style is:global>
*{
    font-size: 62.5%;
    font-family:'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.container{
    max-width: 110rem;
    margin: 0 auto;
}

.heading-1{
    text-align: center;
    font-weight: 500;
    font-size: 2.6rem;
    margin-bottom: 20px;
}

.heading-2{
    text-align: center;
    font-weight: 300;
    font-size: 1.4rem;
    color: #edcdf5;
    background-color: #000000ef;
    text-transform: capitalize;
}

.heading-3{
    font-weight: 600;
    font-size: 2rem;
    display: flex;
    position: absolute;
    padding-left: 90px;
    margin-top: 30px;
    color: rgb(2, 206, 209);
}

.container-hero{
    width: 100%;
    background-color: #fdf7f7f5;

}

.sticky-header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    transition: top 0.3s ease-in-out;
    will-change: top;
    border-radius: 20px;
}

.hero{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: .7rem 0;
    will-change: transform;
}

.container-logo{
    display: flex;
    align-items: center;
    justify-content: center;  /* Para centrar horizontalmente */
    gap: .6rem;
}

.container-logo img{
    width: 50px;
}

.container-logo h1 a {
    text-decoration: none;
    color: #000;
    font-size: 2rem;
    text-transform: uppercase;
    letter-spacing: -1px;
}

</style>
